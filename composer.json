{
  "name": "innoflash/laravel-design-patterns",
  "description": "Laravel design patterns",
  "keywords": [
    "laravel design patterns",
    "repository pattern",
    "service pattern",
    "laravel services",
    "cli"
  ],
  "homepage": "https://github.com/innoflash/laravel-design-patterns",
  "type": "project",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/innoflash/laravel-design-patterns/issues",
    "source": "https://github.com/innoflash/laravel-design-patterns"
  },
  "authors": [
    {
      "name": "Innocent Mazando",
      "email": "innocentmazando@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1.3",
    "laravel-zero/framework": "5.8.*",
    "zendframework/zend-text": "^2.7"
  },
  "require-dev": {
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php application app:rename"
    ]
  },
  "minimum-stability": "v.0.0.2",
  "prefer-stable": true,
  "bin": [
    "ldp"
  ]
}
